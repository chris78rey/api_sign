{
  "name": "firmas",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts,json --exec \"ts-node src/server.ts\"",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "check-health": "ts-node src/scripts/healthcheck.ts",
    "typecheck": "tsc --noEmit",
    "docker:up": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down --remove-orphans && docker compose up --build -d"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.10",
    "@types/node": "^20.9.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
