# Docker Compose / Postgres
POSTGRES_USER=user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=firmas
POSTGRES_PORT=5432

# Prisma (must reach DB from inside api container)
DATABASE_URL="postgresql://user:change_me@db:5432/firmas?schema=public"

# API
PORT=3000
NODE_ENV=development
JWT_SECRET=change_me

# Policy
EVIDENCE_REQUIRED=false

# OmniSwitch integration
OMNISWITCH_MODE=mock
OMNISWITCH_BASE_URL=https://api.omniswitch.com
OMNISWITCH_API_KEY=your_api_key

# Reporting
COST_PER_SIGNATORY=1.0
PRICE_PER_SIGNATORY=5.0
