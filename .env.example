# Docker Compose / Postgres
POSTGRES_USER=user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=firmas
POSTGRES_PORT=5432

# Prisma (must reach DB from inside api container)
DATABASE_URL="postgresql://user:change_me@db:5432/firmas?schema=public"

# API
PORT=3000
NODE_ENV=development
JWT_SECRET=change_me

# Policy
EVIDENCE_REQUIRED=false

# OmniSwitch integration
# Base URL examples from vendor PDF:
# - DEV: https://wsomnimsgrest.recargasypagos.com
# - PROD: https://wsrest.firmalo.ai
# This app will call paths under /api/v1 (e.g. /api/v1/SolicitudeCreate).
OMNISWITCH_MODE=mock
OMNISWITCH_BASE_URL=https://wsrest.firmalo.ai

# If your vendor account uses API key auth, set this.
# If your vendor account uses UserName/Password in payload (per PDF), set OMNISWITCH_USERNAME/OMNISWITCH_PASSWORD.
OMNISWITCH_API_KEY=your_api_key
OMNISWITCH_USERNAME=your_username
OMNISWITCH_PASSWORD=your_password

# Vendor-required process configuration (per PDF: IdProcess)
OMNISWITCH_ID_PROCESS=0

# Defaults used when the vendor requires location fields for signatories
OMNISWITCH_DEFAULT_COUNTRY_ID=0
OMNISWITCH_DEFAULT_PROVINCE_ID=0
OMNISWITCH_DEFAULT_CITY_ID=0
OMNISWITCH_DEFAULT_ADDRESS=Unknown

# PaymentRequired/amount are vendor-side end-user payment inputs.
# For "integrator pays" model, keep these at 0.
OMNISWITCH_PAYMENT_REQUIRED=0
OMNISWITCH_AMOUNT=0
OMNISWITCH_BIOMETRIC_REQUIRED=0

# Reporting
COST_PER_SIGNATORY=1.0
PRICE_PER_SIGNATORY=5.0
